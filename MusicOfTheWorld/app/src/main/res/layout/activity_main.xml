<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hijah.musicoftheworld.MainActivity">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/map" />

    <Button
        android:id="@+id/buttonEastAsia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="146dp"
        android:layout_marginTop="86dp"
        android:background="@android:color/transparent"
        android:text="@string/east_asia" />

    <Button
        android:id="@+id/buttonEurope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonEastAsia"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="98dp"
        android:layout_toStartOf="@+id/buttonEastAsia"
        android:background="@android:color/transparent"
        android:text="Europe" />

</RelativeLayout>
